<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:ignore="RtlHardcoded">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="32dp"
		android:paddingRight="32dp"
		android:layout_marginTop="30dp" >

		<RelativeLayout
			android:id="@+id/speed_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/label_speed"
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:gravity="left"
				android:textColor="@color/normal_name_color"
				android:textSize="@dimen/normal_text_size"
				android:text="@string/text_speed"/>

			<SeekBar
				android:id="@+id/seekbar_speed"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/label_speed"
				android:layout_marginLeft="16dp"
				android:max="@integer/max_ability_value"
				android:progress="@integer/default_ability_value"/>

		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/strength_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/speed_container"
			android:layout_marginTop="16dp">

			<TextView
				android:id="@+id/label_strength"
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:gravity="left"
				android:textColor="@color/normal_name_color"
				android:textSize="@dimen/normal_text_size"
				android:text="@string/text_strength"/>

			<SeekBar
				android:id="@+id/seekbar_strength"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/label_strength"
				android:layout_marginLeft="16dp"
				android:max="@integer/max_ability_value"
				android:progress="@integer/default_ability_value"/>

		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/defence_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/strength_container"
			android:layout_marginTop="16dp">

			<TextView
				android:id="@+id/label_defence"
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:gravity="left"
				android:textColor="@color/normal_name_color"
				android:textSize="@dimen/normal_text_size"
				android:text="@string/text_defence"/>

			<SeekBar
				android:id="@+id/seekbar_defence"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/label_defence"
				android:layout_marginLeft="16dp"
				android:max="@integer/max_ability_value"
				android:progress="@integer/default_ability_value"/>

		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/tech_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/defence_container"
			android:layout_marginTop="16dp">

			<TextView
				android:id="@+id/label_tech"
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:gravity="left"
				android:textColor="@color/normal_name_color"
				android:textSize="@dimen/normal_text_size"
				android:text="@string/text_tech"/>

			<SeekBar
				android:id="@+id/seekbar_tech"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/label_tech"
				android:layout_marginLeft="16dp"
				android:max="@integer/max_ability_value"
				android:progress="@integer/default_ability_value"/>

		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/pass_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/tech_container"
			android:layout_marginTop="16dp">

			<TextView
				android:id="@+id/label_pass"
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:gravity="left"
				android:textColor="@color/normal_name_color"
				android:textSize="@dimen/normal_text_size"
				android:text="@string/text_pass"/>

			<SeekBar
				android:id="@+id/seekbar_pass"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/label_pass"
				android:layout_marginLeft="16dp"
				android:max="@integer/max_ability_value"
				android:progress="@integer/default_ability_value"/>

		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/shoot_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/pass_container"
			android:layout_marginTop="16dp">

			<TextView
				android:id="@+id/label_shoot"
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:gravity="left"
				android:textColor="@color/normal_name_color"
				android:textSize="@dimen/normal_text_size"
				android:text="@string/text_shoot"/>

			<SeekBar
				android:id="@+id/seekbar_shoot"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/label_shoot"
				android:layout_marginLeft="16dp"
				android:max="@integer/max_ability_value"
				android:progress="@integer/default_ability_value"/>

		</RelativeLayout>


	</RelativeLayout>

</ScrollView>