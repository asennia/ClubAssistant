<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:ignore="RtlHardcoded"
	android:background="@drawable/item_bg">

	<RelativeLayout
		android:id="@+id/remain_container"
		android:layout_width="@dimen/history_profit_in_out_width"
		android:layout_height="@dimen/history_profit_item_height"
		android:layout_alignParentRight="true">

		<View
			android:layout_width="0.5dp"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:background="@color/line_color" />

		<TextView
			android:id="@+id/remain"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textSize="@dimen/normal_text_size"
			android:textColor="@color/normal_name_color"/>

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/cost_out_container"
		android:layout_width="@dimen/history_profit_in_out_width"
		android:layout_height="@dimen/history_profit_item_height"
		android:layout_toLeftOf="@id/remain_container">

		<View
			android:layout_width="0.5dp"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:background="@color/line_color" />

		<TextView
			android:id="@+id/cost_out"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textSize="@dimen/normal_text_size"
			android:textColor="@color/normal_name_color"/>

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/cost_in_container"
		android:layout_width="@dimen/history_profit_in_out_width"
		android:layout_height="@dimen/history_profit_item_height"
		android:layout_toLeftOf="@id/cost_out_container">

		<View
			android:layout_width="0.5dp"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:background="@color/line_color" />

		<TextView
			android:id="@+id/cost_in"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textSize="@dimen/normal_text_size"
			android:textColor="@color/normal_name_color"/>

	</RelativeLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/history_profit_item_height"
		android:layout_toLeftOf="@id/cost_in_container"
		android:gravity="center_vertical">

		<TextView
			android:id="@+id/date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="16dp"
			android:textSize="@dimen/normal_text_size"
			android:textColor="@color/normal_name_color"/>

		<TextView
			android:id="@+id/address"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@id/date"
			android:layout_below="@id/date"
			android:layout_marginTop="3dp"
			android:ellipsize="end"
			android:textSize="@dimen/small_text_size"
			android:textColor="@color/hint_color"/>

	</RelativeLayout>

	<View
		android:id="@+id/separating_line"
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:layout_alignParentBottom="true"
		android:background="@color/line_color" />

</RelativeLayout>