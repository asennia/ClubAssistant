<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	tools:ignore="RtlHardcoded">

	<ImageView
		android:id="@+id/game_image"
		android:layout_width="@dimen/member_detail_item_image_size"
		android:layout_height="@dimen/member_detail_item_image_size"
		android:layout_centerVertical="true"
		android:layout_marginLeft="16dp"
		android:background="@drawable/football"
		android:contentDescription="@string/text_description"/>

	<TextView
		android:id="@+id/date_view"
		android:layout_width="@dimen/member_detail_item_date_width"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/game_image"
		android:layout_marginLeft="16dp"
		android:layout_centerVertical="true"
		android:textSize="@dimen/normal_text_size"
		android:textColor="@color/normal_name_color"/>

	<RelativeLayout
		android:id="@+id/cost_container"
		android:layout_width="@dimen/member_detail_item_cost_width"
		android:layout_height="@dimen/member_detail_item_height"
		android:layout_alignParentRight="true">

		<View
			android:layout_width="0.5dp"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:background="@color/line_color" />

		<TextView
			android:id="@+id/cost_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textSize="@dimen/normal_text_size"
			android:textColor="@color/normal_name_color"/>

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/goal_container"
		android:layout_width="@dimen/member_detail_item_goal_width"
		android:layout_height="@dimen/member_detail_item_height"
		android:layout_toLeftOf="@id/cost_container">

		<View
			android:layout_width="0.5dp"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:background="@color/line_color" />

		<TextView
			android:id="@+id/goal_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:textSize="@dimen/normal_text_size"
			android:textColor="@color/normal_name_color"/>

	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:paddingLeft="12dp"
		android:paddingRight="12dp"
		android:layout_alignParentBottom="true"
		android:background="@color/line_color" />

</RelativeLayout>